<UserControl x:Class="Clean_CaDET.View.TutoringWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Name="TutoringWindow">
    <UserControl.Resources>
        <Style x:Key="SelectableTextBox" TargetType="TextBox">
            <Setter Property = "Padding" Value = "10 10 30 10" />
            <Setter Property = "TextWrapping" Value = "Wrap" />
            <Setter Property = "IsReadOnly" Value = "True" />
            <Setter Property = "BorderThickness" Value = "0" />
            <Setter Property = "Background" Value = "Transparent" />
        </Style>
        <Style x:Key = "TextContentStyle" TargetType = "TextBox" BasedOn="{StaticResource SelectableTextBox}">
            <Setter Property = "TextAlignment" Value = "Justify" />
            <Setter Property = "FontSize" Value = "14" />
        </Style>
        <Style x:Key = "TitleContentStyle" TargetType = "TextBox" BasedOn="{StaticResource SelectableTextBox}">
            <Setter Property = "TextAlignment" Value = "Center" />
            <Setter Property = "FontFamily" Value = "Helvetica" />
            <Setter Property = "FontSize" Value = "24" />
            <Setter Property = "FontWeight" Value = "Bold" />
        </Style>
    </UserControl.Resources>

    <Grid Name="TutorGrid">
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Hidden">
            <StackPanel MaxWidth="{Binding ElementName=TutorGrid, Path=ActualWidth}" Orientation="Vertical" CanVerticallyScroll="True">
                <TextBox Text="{Binding Content.Title}" Style="{StaticResource TitleContentStyle}"/>
                <TextBox Text="{Binding Content.GeneralDescription}" Style="{StaticResource TextContentStyle}"/>
                <TextBox Text="{Binding Content.DetectedIssue}" Style="{StaticResource TextContentStyle}"/>
                <Image Source="{Binding Content.Image}"/>
                <TextBox Text="{Binding Content.Recommendations}" Style="{StaticResource TextContentStyle}"/>

                <Label Content="Content Difficulty" 
                       Margin="40 10 10 10"
                ></Label>
                <TextBox Text="{Binding NewContent.ContentDifficulty}"
                         Style="{StaticResource TextContentStyle}"
                         Margin="40 10 10 10"
                         />
                <Label Content="Content Quality" 
                       Margin="40 10 10 10"
                ></Label>
                <TextBox Text="{Binding NewContent.ContentQuality}"
                         Style="{StaticResource TextContentStyle}"
                         Margin="40 10 10 10"
                         />
                
                <DataGrid
                    x:Name="dataGridEducationSnippets"
                    ItemsSource="{Binding NewContent.EducationSnippets}"
                    AutoGenerateColumns="False" 
                    SelectionMode="Single" 
                    IsReadOnly="True"
                    Margin="0, 0, 0, 0" 
                    HorizontalAlignment="Center"                 
                    Height="340"
                    Width="602" 
                    Background="#FF226397"
                    >

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Content}" Header="Content"/>
                        <DataGridTextColumn Binding="{Binding SnippetDifficulty}" Header="Snippet Difficulty"/>
                        <DataGridTextColumn Binding="{Binding SnippetQuality}" Header="Snippet Quality"/>
                    </DataGrid.Columns>

                </DataGrid>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
